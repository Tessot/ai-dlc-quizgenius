# QuizGenius MVP - Environment Variables Template
# Copy this file to .env and fill in your actual values

# AWS Configuration
# Note: If you have AWS CLI configured, you can leave AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY empty
# The application will automatically use your AWS CLI credentials
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key_here  # Optional if AWS CLI is configured
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here  # Optional if AWS CLI is configured

# DynamoDB Configuration
DYNAMODB_USERS_TABLE=QuizGenius-Users
DYNAMODB_DOCUMENTS_TABLE=QuizGenius-Documents
DYNAMODB_QUESTIONS_TABLE=QuizGenius-Questions
DYNAMODB_TESTS_TABLE=QuizGenius-Tests
DYNAMODB_TEST_ATTEMPTS_TABLE=QuizGenius-TestAttempts
DYNAMODB_RESULTS_TABLE=QuizGenius-Results

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_DATA_AUTOMATION_MODEL=amazon.titan-text-express-v1

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your_user_pool_id_here
COGNITO_CLIENT_ID=your_client_id_here
COGNITO_CLIENT_SECRET=your_client_secret_here

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Security Configuration
SECRET_KEY=your_secret_key_for_sessions_here
SESSION_TIMEOUT=3600

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf
UPLOAD_FOLDER=uploads/